    <!-- Hero Section -->
    
    <section class="hero-section">
      <div class="profile-pic">
      </div>
    </section>

    <!-- Profile Info -->

    <section class="profile-info">
      <div class="main-container">
        <div class="row">
          <!-- Left Column -->
          <div class="col-5">
            <div class="user-card">
              <h2>About</h2>
              <ul>
                <li>City: </li>
                <li>Stack: </li>
                <li>Email: </li>
              </ul>
            </div>
            <div class="user-card">
              <h2>Projects</h2>
              <div class="project-wrapper"></div>
              <div class="project-wrapper"></div>
              <div class="project-wrapper"></div>
              <div class="project-wrapper"></div>
              <div class="project-wrapper"></div>
            </div>         
          </div>

          <!-- Right Column -->
          <div class="col-7">
            <div class="user-card code-form">
              <form id="save-code-form">
                <div class="form-group">
                  <input id="title" type="text" class="form-control" id="formGroupExampleInput" placeholder="Title">
                </div>
                <div class="form-group">
                  <textarea id="code" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Code"></textarea>
                </div>
                <div class="form-group">
                  <textarea id="description" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
              </form>
            </div>
            <div>
              <div class="user-card code-card">
                <ul>
                  {{#each code}}
                    <li>
                      <p>ID: {{this.id}}</p>
                      <p>Title: {{this.title}}</p>
                      <p>Code: {{this.code}}</p>
                      <p>Description: {{this.description}}</p>
                      <button data-codeid="{{this.id}}" class="delete-btn btn btn-primary mb-2">Delete Code</button>
                    </li>
                  {{/each}}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>