    <!-- Profile Info -->

    {{!-- Start of the main container --}}
    <section class="profile-info">
      <div class="main-container">
        <div class="row">
          {{!-- Left Column --}}
          {{!-- About Card --}}
          <div class="col-5">
            <div class="user-card">
              <h1 id="name">User</h1>
              <ul>
                <li>Email: <span id="email"></span></li>
                <li>City: <span id="city"></span></li>
                <li>Technology Stack: <span id="technology"></span></li>
                <li>Github: <span id="github"></span></li>
                <li>LinkedIn: <span id="linkedin"></span></li>
              </ul>
              <form action="/uploads" method="POST" enctype="multipart/form-data">
                <input type="file" name="avatar" />
                <button id="uploadBtn">Upload</button>
              </form>
            </div>
             {{!-- Github Card --}}
            <div id="projectsContainer" class="card mx-auto user-card">
              <h1>Projects</h1>
              <hr />
              <div id="profile">
    
              </div>
            </div>
  
          </div>
         

          {{!-- Right Column --}}
          <div class="col-7">
        <div class="user-card code-form">
          <form id="save-code-form">
            <div class="form-group">
              <input id="title" type="text" class="form-control" id="formGroupExampleInput" placeholder="Title">
            </div>
            <div class="form-group">
              <textarea id="code" class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Code"></textarea>
            </div>
            <div class="form-group">
              <textarea id="description" class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
          </form>
        </div>
        <div>
          <div class="user-card code-card">
            <ul>
              {{#each code}}
              <li>
                <p>ID: {{this.id}}</p>
                <p>Title: {{this.title}}</p>
                <p>Code: {{this.code}}</p>
                <p>Description: {{this.description}}</p>
                <button data-codeid="{{this.id}}" class="delete-btn btn btn-primary mb-2">Delete Code</button>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
        </div>


      </div>

      

    </section>
