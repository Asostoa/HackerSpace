

    <!-- Profile Info -->
    {{!-- Start of the jumbotron --}}
    <div class="jumbotron jumbotron-fluid" style="
            background-image: url(./images/sample-hero-image.png);
            background-size: 100%;
            height: 20%;
          ">
      <img id="profileImage" style="height: 8rem;" class="rounded-circle mx-auto d-block"
        src="./images/sample-profile-pic.png" alt="profile Image" />
    </div>
    {{!-- This ist he end of the jumbotron --}}

    {{!-- Start of the main container --}}
    <div id="mainContainer" class="row">

      {{!-- Personal information about the user --}}
      <div id="userInfo" class="card mx-auto col-4">
        <h1 id="name">User</h1>
        <hr />
        <ul>
          <li>Email: <span id="email"></span></li>
          <li>City: <span id="city"></span></li>
          <li>Technology Stack: <span id="technology"></span></li>
          <li>Github: <span id="github"></span></li>
          <li>LinkedIn: <span id="linkedin"></span></li>
        </ul>
      </div>
    {{!-- End of personal information --}}

    {{!-- Code that the user will provide section --}}
      <div class="col-7">
        <div class="user-card code-form">
          <form id="save-code-form">
            <div class="form-group">
              <input id="title" type="text" class="form-control" id="formGroupExampleInput" placeholder="Title">
            </div>
            <div class="form-group">
              <textarea id="code" class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Code"></textarea>
            </div>
            <div class="form-group">
              <textarea id="description" class="form-control" id="exampleFormControlTextarea1" rows="3"
                placeholder="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mb-2">Submit</button>
          </form>
        </div>
        <div>
          <div class="user-card code-card">
            <ul>
              {{#each code}}
              <li>
                <p>ID: {{this.id}}</p>
                <p>Title: {{this.title}}</p>
                <p>Code: {{this.code}}</p>
                <p>Description: {{this.description}}</p>
                <button data-codeid="{{this.id}}" class="delete-btn btn btn-primary mb-2">Delete Code</button>
              </li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      {{!-- End of the code section --}}

      {{!-- Section where the projects are displayed --}}
      <div id="projectsContainer" class="card mx-auto col-4 float-left">
        <h1>Projects</h1>
        <hr />
        <div id="profile">
    
        </div>
      </div>
      {{!-- End of the projects --}}
      
      {{!-- Form for the profile image --}}
      <form action="/uploads" method="POST" enctype="multipart/form-data">
        <input type="file" name="avatar" />
        <button id="uploadBtn">Upload</button>
      </form>
    {{!-- End of the profile image form --}}
    
    </div>
    {{!-- End of the main container --}}